<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fef4ff"
    tools:context="com.nfc.redes.nfc_smarttags.Biblioteca">

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgBtnCubiculosDisponibles"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icono_cubiculos_disponibles"
        android:onClick="muestraCubiculosDisponibles"
        android:src="@drawable/boton_rojo"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_alignEnd="@+id/imgBtnCubiculosDisponibles"
        android:layout_marginTop="150dp"
        android:id="@+id/imgBtnIngresar"
        android:background="@drawable/icono_ingresar"
        android:src="@drawable/boton_azul"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_alignEnd="@+id/imgBtnCubiculosDisponibles"
        android:layout_marginTop="300dp"
        android:id="@+id/imgBtnBiblioteca"
        android:background="@drawable/icono_registrarse"
        android:onClick="registrarse"
        android:src="@drawable/boton_verde"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>